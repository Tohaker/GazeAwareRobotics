<Window x:Class="LED_Blink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tobii="clr-namespace:Tobii.Interaction.Wpf;assembly=Tobii.Interaction.Net"
        xmlns:local="clr-namespace:LED_Blink"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="LayoutRoot"
          tobii:Behaviors.IsActivatable="True"
          tobii:Behaviors.IsTentativeFocusEnabled="True">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="ON" HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top" Width="75" Height="75">
            
        </Button>
        
        <Button Grid.Column="1" Content="OFF" HorizontalAlignment="Left" Margin="50,120,0,0" VerticalAlignment="Top" Width="75" Height="75">
            
        </Button>

        <TextBlock Grid.Column="2" 
                   Margin="10"
                   Text="Instructions" />
        
    </Grid>
</Window>
